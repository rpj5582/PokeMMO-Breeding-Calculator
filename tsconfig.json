{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "watch": true,
        "sourceMap": true,
        "allowJs": false,
        "strict": true,
        "noUnusedLocals": true,    
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "lib": ["dom", "es6", "webworker", "scripthost"],
        "outDir": "./dist/"
    }
}